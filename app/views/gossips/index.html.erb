<h1>Voila tout ce que l'on sait !!!!</h1>


<table>
	
  <% @gossips.each do |gossip| %>
    <tr>
      <td><%= gossip.id %></td>
      <td><%= gossip.anonymous_author %></td>
      <td><%= gossip.content %></td>
      
      <td><%= link_to 'Show', gossip_path(gossip) %></td>
      <td><%= link_to 'edit', new_gossip_path(gossip) %></td>
      <td><%= link_to 'Destroy', gossip_path(gossip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

	</table>

<img alt="images.png" src="images.png"  />


